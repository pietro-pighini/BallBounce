<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BallBounceLibrary.Views.GamePage"
             Title="{Binding GameBall}"
             BackgroundColor="Black">

    <AbsoluteLayout>
        <!-- Piattaforme -->
        <!-- Prima piattaforma -->
        <Image Source="platform.png" 
               AbsoluteLayout.LayoutBounds="50,50,80,10"
               AbsoluteLayout.LayoutFlags="None"/>

        <!-- Seconda piattaforma -->
        <Image Source="platform.png"
               AbsoluteLayout.LayoutBounds="250,80,80,10"
               AbsoluteLayout.LayoutFlags="None"/>

        <!-- Piattaforma verde per salti -->
        <Image Source="jumpingplat.png"
               AbsoluteLayout.LayoutBounds="30,300,80,10"
               AbsoluteLayout.LayoutFlags="None"/>

        <!-- Piattaforma rossa con trappola -->
        <Image Source="trap.png"
               AbsoluteLayout.LayoutBounds="200,250,80,25"
               AbsoluteLayout.LayoutFlags="None"/>

        <!-- Boost -->
        <Image Source="boost.png"
               AbsoluteLayout.LayoutBounds="60,130,24,24"
               AbsoluteLayout.LayoutFlags="None"/>

        <!-- Giocatore (palla) -->
        <Image Source="ball.png"
               AbsoluteLayout.LayoutBounds="80,370,40,40"
               AbsoluteLayout.LayoutFlags="None"/>

        <!-- Pulsante Freccia SINISTRA -->
        <ImageButton Source="leftarrow.png"  
            AbsoluteLayout.LayoutBounds="20,0.9,80,80"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     BackgroundColor="White"
                     Command="{Binding MoveLeftCommand}"
                     Scale="1.5"
                     Margin="10"/>

            <!-- Pulsante Freccia DESTRA -->
        <ImageButton Source="rightarrow.png"  
                AbsoluteLayout.LayoutBounds="0.9,0.9,80,80"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     BackgroundColor="White"
                     Command="{Binding MoveRightCommand}"
                     Scale="1.5"
                     Margin="10"/>
    </AbsoluteLayout>
</ContentPage>